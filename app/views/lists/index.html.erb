<p style="color: green"><%= notice %></p>
<div class="container">
  <h1>Watch lists</h1>

  <div id="lists">
    <%= link_to "Add a new list", new_list_path, class: 'btn btn-primary' %>
    <% @lists.each do |list| %>
      <%= render list %>
      <p>
        <%= link_to "Show this list", list %>
      </p>
    <% end %>
  </div>
</div>
