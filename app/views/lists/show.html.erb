<div>
  <%= render @list %>
  <%= link_to "Back to lists", root_path %>

  <%= link_to "Destroy this list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

  <h2>bookmarks</h2>

  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.comment %>
        <%= link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add new bookmark', new_list_bookmark_path(@list) %>
</div>
</div>
